extends layout
block content
    div(class="container-fluid front-page")
        div(class="container-fluid")
            div(class="row")
                div(class="col-md-1")
                div(class="col-md-10")
                    form(id="metadata")
                        div(class="panel panel-success")
                            div(class="panel-heading")
                                h3(class="panel-title") Saved Queries
                            div(class="panel-body")
                                div(class="row")
                                    div(class="col-md-8" id="savedQueries")
                                        h3 Queries
                                        ul(class="list-group" id="savedQueriesList")
                                    div(class="col-md-4" id="editButtons")
                                        h3 Edit
                                        form(id="controls")
                                            button(id="editQuery" type="submit" class="btn btn-default") Edit
