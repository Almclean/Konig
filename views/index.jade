extends layout
block content
    script(src='/javascripts/main.js')
    div(class="container-fluid")
        div(class="row")
            br
            br
            br
            br
        div(class="row")
            div(class="col-md-6 col-md-offset-3")
                div(class="panel panel-default")
                    div(class="panel-heading")
                        h3(id="lblInfo" class="panel-title" ) Please sign in
                        div(class="panel-body")
                            form(id="signIn" accept-charset="UTF-8" role="form")
                                fieldset
                                    div(class="form-group")
                                        input(class="form-control" placeholder="User Name" name="usernameInput" type="text")
                                    div(class="form-group")
                                        input(class="form-control" placeholder="Password" name="passwordInput" type="password" value="")
                                    div(class="checkbox")
                                        label Remember Me
                                            input(name="remember" type="checkbox" value="Remember Me")
                                    input(id="btnLogin" class="btn btn-lg btn-success btn-block" type="submit" value="Login")